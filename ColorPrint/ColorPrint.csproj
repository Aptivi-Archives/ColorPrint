<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ApplicationIcon>OfficialAppIcon-ColorPrint.ico</ApplicationIcon>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>1.2.0</Version>
    <PackageVersion>1.2.0</PackageVersion>
    <Authors>Aptivi</Authors>
    <Product>ColorPrint</Product>
    <Description>Color wheel application</Description>
    <Copyright>Copyright (c) 2023 Aptivi</Copyright>
    <PackageProjectUrl>https://github.com/Aptivi/ColorPrint</PackageProjectUrl>
    <PackageIcon>OfficialAppIcon-ColorPrint-512.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/Aptivi/ColorPrint</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>color;colorseq;sequence;vt;vtsequence;truecolor;colors;csharp;dotnet</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="OfficialAppIcon-ColorPrint.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="OfficialAppIcon-ColorPrint-512.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ColorPrint.Core\ColorPrint.Core.csproj" />
  </ItemGroup>

</Project>
